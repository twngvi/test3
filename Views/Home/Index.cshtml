@{
    ViewData["Title"] = "Trang chủ";
}

<div class="text-center">
    <h1 class="display-4">Chào mừng đến với Thư viện</h1>
    <p class="lead">Hệ thống quản lý sách và tác giả</p>
    
    <div class="row mt-5">
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-book fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Quản lý sách</h5>
                    <p class="card-text">Thêm, sửa, xóa và xem chi tiết các cuốn sách trong thư viện.</p>
                    <a asp-controller="Book" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-arrow-right"></i> Vào trang sách
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-user-edit fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Quản lý tác giả</h5>
                    <p class="card-text">Quản lý thông tin các tác giả và tác phẩm của họ.</p>
                    <button class="btn btn-success" disabled>
                        <i class="fas fa-cog"></i> Đang phát triển
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <div class="mt-4">
        <p class="text-muted">Tìm hiểu thêm về <a href="https://learn.microsoft.com/aspnet/core">phát triển ứng dụng Web với ASP.NET Core</a>.</p>
    </div>
</div>
